<% if notice.present? %>
  <div data-controller="flash-message" data-autohide="true" class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative mb-4" role="alert">
    <span class="block sm:inline"><%= notice %></span>
  </div>
<% end %>

<% if alert.present? %>
  <div data-controller="flash-message" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
    <span class="block sm:inline"><%= alert %></span>
  </div>
<% end %> 