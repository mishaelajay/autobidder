<div id="<%= dom_id(bid) %>" 
     class="flex items-center justify-between p-4 bg-gray-50 hover:bg-gray-100 rounded-lg transition-colors duration-200"
     data-controller="bid-highlight"
     data-bid-user-id="<%= bid.user_id %>">
  <div class="flex items-center space-x-4">
    <div class="flex-shrink-0">
      <div class="w-10 h-10 rounded-full bg-indigo-100 flex items-center justify-center">
        <span class="text-indigo-600 font-medium"><%= bid.user.name.first %></span>
      </div>
    </div>
    <div>
      <p class="font-medium text-gray-900">
        <%= bid.user.name %> <span class="text-sm text-gray-500">(ID: <%= bid.user_id %>)</span>
      </p>
      <p class="text-sm text-gray-500">
        <%= time_ago_in_words(bid.created_at) %> ago
      </p>
    </div>
  </div>
  <div class="text-right">
    <p class="text-lg font-semibold text-indigo-600">
      <%= number_to_currency(bid.amount) %>
    </p>
  </div>
</div> 