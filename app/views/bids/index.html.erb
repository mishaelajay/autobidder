<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-8">My Bids</h1>

  <div class="bg-white rounded-lg shadow overflow-hidden">
    <div class="divide-y divide-gray-200">
      <% @bids.each do |bid| %>
        <div class="p-6 hover:bg-gray-50 transition-colors duration-200">
          <div class="flex justify-between items-start">
            <div>
              <h2 class="text-xl font-semibold text-gray-900 mb-2">
                <%= link_to bid.auction.title, auction_path(bid.auction), class: "hover:text-indigo-600" %>
              </h2>
              <div class="space-y-1">
                <p class="text-sm text-gray-500">
                  Bid placed <%= time_ago_in_words(bid.created_at) %> ago
                </p>
                <p class="text-sm text-gray-500">
                  Auction <%= bid.auction.active? ? "ends" : "ended" %> 
                  <%= bid.auction.active? ? "in #{distance_of_time_in_words(Time.current, bid.auction.ends_at)}" : bid.auction.ends_at.strftime("%B %d, %Y at %I:%M %p") %>
                </p>
              </div>
            </div>
            <div class="text-right">
              <p class="text-lg font-semibold text-indigo-600">
                <%= number_to_currency(bid.amount) %>
              </p>
              <p class="text-sm text-gray-500">
                <% if bid.auction.active? %>
                  <% if bid.auction.current_highest_bid == bid %>
                    <span class="text-green-600 font-medium">Highest Bid</span>
                  <% else %>
                    <span class="text-red-600">Outbid</span>
                  <% end %>
                <% else %>
                  <% if bid.auction.winner == current_user %>
                    <span class="text-green-600 font-medium">Won</span>
                  <% else %>
                    <span class="text-gray-600">Lost</span>
                  <% end %>
                <% end %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div> 